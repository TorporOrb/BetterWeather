{% extends 'base.html.twig' %}

{% block title %}Hello LocationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Forecast for {{ cityName }}! âœ…</h1>

    {% for forecast in forecasts %}
        <h2>{{ forecast.date |  date("Y-m-d") }}</h2>
        <dl>
            <dt>Temperature</dt>
            <dd>{{ forecast.temperature }}</dd>
            <dt>Feels Like</dt>
            <dd>{{ forecast.feels_like }}</dd>
            <dt>Pressure</dt>
            <dd>{{ forecast.pressure }}</dd>
            <dt>Humidity</dt>
            <dd>{{ forecast.humidity }}</dd>
            <dt>Wind Speed</dt>
            <dd>{{ forecast.wind_speed }}</dd>
            <dt>Wind Degree</dt>
            <dd>{{ forecast.wind_deg }}</dd>
            <dt>Cloudiness</dt>
            <dd>{{ forecast.cloudiness }}</dd>
            <dt>Icon</dt>
            <dd>{{ forecast.icon }}</dd>
        </dl>
    {% endfor %}

    Hier komen:
    <ul>
        <li>4 overdag en 4 avond forecasts</li>
        <li>Links naar de forecasts per dag</li>
    </ul>
</div>
{% endblock %}
