{% extends 'layout_boxed.html.twig' %}

{% block title %}Hello LocationController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row mt-3">
    <div class="col">
        <h1>Forecast for {{ cityName }}</h1>
    </div>

    <div class="row mt-3 forecasts">

        {% for forecast in forecasts %}
            <div class="col-12 col-lg-6">
                <div class="forecast-card">
                    <div class="row"> 
                        <div class="forecast-card-header col-12 d-flex justify-content-between align-items-center">
                            <div class="day">{{ forecast.date |  date("l") }}</div>
                            <div class="date">{{ forecast.date |  date("d.m") }}</div>
                        </div>
                        <div class="forecast-card-general col-12 col-lg-6">
                            <div class="row"> 
                                <div class="col-6 text-center">
                                    <i class="bi-{{ forecast.icon }} forecast-icon"></i>
                                </div>
                                <div class="col-6">
                                    <div class="temperature">{{ forecast.temperature }}&deg;</div>
                                    <div class="feels_like">Feels like {{ forecast.feels_like }}&deg;</div>
                                </div>
                            </div>
                        </div>
                        <div class="forecast-card-details col-12 col-lg-6 mt-3">
                            <dl>
                                <dt>Pressure</dt>
                                <dd>{{ forecast.pressure }}</dd>
                                <dt>Humidity</dt>
                                <dd>{{ forecast.humidity }}%</dd>
                                <dt>Wind Speed</dt>
                                <dd>{{ forecast.wind_speed }}m/s</dd>
                                <dt>Wind Degree</dt>
                                <dd>{{ forecast.wind_deg }}</dd>
                                <dt>Cloudiness</dt>
                                <dd>{{ forecast.cloudiness }}%</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>

    {# Hier komen:
    <ul>
        <li>4 overdag en 4 avond forecasts</li>
        <li>Links naar de forecasts per dag</li>
    </ul> #}
</div>
{% endblock %}
